<%= semantic_form_for dc, :url => '/debug_call#simple', :method => :get do |form| %>
    <%= form.semantic_errors *form.object.errors.keys %>
    <%= form.inputs do %>
        <%= form.input :src_prefix, input_html: {onkeyup: delayed_remote_chosen_request(1200, :get, search_for_debug_customers_auths_path, {src_prefix: "$(el).val()", dst_prefix: "$(debug_call_dst_prefix).val()"}, :debug_call_customer_auth_id) } %>
        <%= form.input :dst_prefix, input_html: {onkeyup: delayed_remote_chosen_request(1200, :get, search_for_debug_customers_auths_path, {src_prefix: "$(debug_call_src_prefix).val()", dst_prefix: "$(el).val()"}, :debug_call_customer_auth_id) } %>
        <%= form.input :customer_auth_id, label: "Customer Auth record", collection: [], prompt: "Select numbers firstly", as: :select, input_html: {class: 'chosen-wide'} %>
    <% end %>

    <%= form.submit :value => 'Simulate routing' %>
<% end %>


